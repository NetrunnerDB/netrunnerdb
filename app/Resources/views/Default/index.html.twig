{% extends '/layout.html.twig' %}

{% block head %}
<script src="{{ asset('/js/index.js') }}?cachebuster={{ asset_fingerprint }}"></script>

<script type="text/javascript">

var Identity = null,
  Decklist = {{ decklist|json_encode|raw }},
  MWL = null,
  DisplaySort = 'type',
  DisplaySortSecondary = 'name';

</script>
<script type="application/ld+json">
{
   "@context": "http://schema.org",
   "@type": "WebSite",
   "url": "https://netrunnerdb.com/",
   "potentialAction": {
     "@type": "SearchAction",
     "target": "https://netrunnerdb.com/find/?q={search_term_string}",
     "query-input": "required name=search_term_string"
   }
}
</script>
{% endblock %}
{% block body %}

<div class="container" id="index_page">
  {% include '/Default/navbar-factions.html.twig' %}
  <div class="row">
    <div class="col-md-8">
      {% include '/Default/decklist_of_the_week.html.twig' %}
    </div>
    <div class="col-md-4">
      {% include '/Default/recent_decklists.html.twig' %}
    </div>
  </div>
  {% include '/Default/update-log.html.twig' %}
</div> <!-- .container -->


{% endblock %}
